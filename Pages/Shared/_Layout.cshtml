<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@RenderSection("Title", required: false) - Azure AI Playground</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <h5 class="sidebar-heading px-3 pt-3">AI Demos</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#imageMenu" data-bs-toggle="collapse" aria-expanded="false">Image Analysis</a>
                            <ul class="collapse list-unstyled ps-4" id="imageMenu">
                                <li><a class="nav-link" asp-page="/ImageAnalysis">Analyze Image</a></li>
                                <li><a class="nav-link" asp-page="/CustomVision">Custom Vision</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#textMenu" data-bs-toggle="collapse" aria-expanded="false">Text Analysis</a>
                            <ul class="collapse list-unstyled ps-4" id="textMenu">
                                <li><a class="nav-link" asp-page="/TextAnalytics">Analyze Text</a></li>
                                <li><a class="nav-link" asp-page="/SentimentAnalysis">Sentiment Analysis</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#speechMenu" data-bs-toggle="collapse" aria-expanded="false">Speech Services</a>
                            <ul class="collapse list-unstyled ps-4" id="speechMenu">
                                <li><a class="nav-link" asp-page="/SpeechToText">Speech to Text</a></li>
                                <li><a class="nav-link" asp-page="/TextToSpeech">Text to Speech</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/FormRecognizer">Form Recognizer</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
